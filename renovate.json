{
  "extends": [
    "config:base"
  ],
  "timezone": "America/Mexico_City",
  "baseBranches": ["master"],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "schedule": [
        "before 12pm"
      ]
    }
  ],
  "major": {
    "schedule": [
      "every 3 months on the first day of the month"
    ],
    "automerge": false
  }
}
